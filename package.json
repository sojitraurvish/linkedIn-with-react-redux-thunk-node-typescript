  "license": "ISC",
  "bugs": {
    "url": "https://github.com/sojitraurvish/linkedIn-with-react-redux-thunk-node-typescript/issues"
  },
  "homepage": "https://github.com/sojitraurvish/linkedIn-with-react-redux-thunk-node-typescript#readme",
  "dependencies": {
    "concurrently": "^7.6.0"
  }
}
