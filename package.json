{
  "name": "linkin",
  "version": "1.0.0",
  "description": "linkedIn",
  "main": "server.js",
  "scripts": {
    "install-server": "npm install --prefix backend",
    "install-client": "npm install --prefix my-app",
    "install": "npm install && npm run install-server && npm run install-client",

    "server": "npm run server --prefix backend",
    "client": "npm start --prefix my-app",
    "watch": "concurrently \"npm run server\"  \"npm run client\" ",
    
    "deploy": "npm run build --prefix client && npm start --prefix server"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sojitraurvish/linkedIn-with-react-redux-thunk-node-typescript.git"
  },
